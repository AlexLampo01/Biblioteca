<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/prova_sfondo"
    android:padding="20dp"
    tools:context=".HomePage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sfondo_testa"
        android:backgroundTintMode="screen"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/emailTv"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rettangolo_per_ricerca"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailTv">

            <EditText
                android:id="@+id/cercalibri"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Cerca Libri"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/cerca"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/sfondo_ricerca"
                android:contentDescription="@string/app_name"
                android:padding="6dp"
                android:src="@drawable/ic_search"
                app:tint="#44d4ec" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:scrollbarStyle="outsideInset"
        android:layout_width="wrap_content"
        android:layout_height="573dp"
        android:layout_below="@+id/layoutTesta"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutTesta"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="@drawable/prova_sfondo"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/film"
                android:layout_width="wrap_content"
                android:layout_height="283dp"
                android:contentDescription="@string/app_name"
                android:gravity="top"
                android:padding="5dp"
                android:src="@drawable/film" />

            <ImageView
                android:id="@+id/libri"
                android:layout_width="wrap_content"
                android:layout_height="283dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/libreria"
                app:layout_constraintTop_toBottomOf="@+id/film" />

            <ImageView
                android:id="@+id/musica"
                android:layout_width="wrap_content"
                android:layout_height="283dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/musica"
                app:layout_constraintTop_toBottomOf="@+id/libri" />

            <ImageView
                android:id="@+id/percorso_lettura"
                android:layout_width="wrap_content"
                android:layout_height="283dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/percorso_lettura"
                app:layout_constraintTop_toBottomOf="@+id/musica" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>